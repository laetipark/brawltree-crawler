{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "~/blossom/*": [
        "./src/features/blossom/*"
      ],
      "~/brawlers/*": [
        "./src/features/brawlers/*"
      ],
      "~/common/*": [
        "./src/common/*"
      ],
      "~/config/*": [
        "./src/config/*"
      ],
      "~/crew/*": [
        "./src/features/crew/*"
      ],
      "~/database/*": [
        "./src/database/*"
      ],
      "~/maps/*": [
        "./src/features/maps/*"
      ],
      "~/public/*": [
        "./src/public/*"
      ],
      "~/seasons/*": [
        "./src/features/seasons/*"
      ],
      "~/users/*": [
        "./src/features/users/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ]
    }
  }
}