{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./configs/env/.development.env",
        "outDir": "./dist/"
      },
      {
        "include": "./configs/env/.production.env",
        "outDir": "./dist/"
      }
    ],
    "webpack": true
  },
  "projects": {
    "users": {
      "type": "library",
      "root": "libs/users",
      "entryFile": "index",
      "sourceRoot": "libs/users/src",
      "compilerOptions": {
        "tsConfigPath": "libs/users/tsconfig.lib.json"
      }
    }
  }
}